{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Jackal",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#strings" },
		{ "include": "#keywords" },
		{ "include": "#storage" },
		{ "include": "#constants" },
		{ "include": "#entities" },
		{ "include": "#operators" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.jackal",
					"match": "//.*$"
				},
				{
					"name": "comment.block.jackal",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.jackal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.jackal",
					"match": "\\\\."
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.jackal",
					"match": "\\b(if|else|while|for|return|match|default|import|try|catch|throw)\\b"
				},
				{
					"name": "keyword.other.jackal",
					"match": "\\b(extends|implements)\\b"
				}
			]
		},
		"storage": {
			"patterns": [
				{
					"name": "storage.type.jackal",
					"match": "\\b(let|const|class|interface|enum|function)\\b"
				},
				{
					"name": "storage.modifier.jackal",
					"match": "\\b(static|public|private)\\b"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.jackal",
					"match": "\\b(true|false|nil|this)\\b"
				},
				{
					"name": "constant.numeric.jackal",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"entities": {
			"patterns": [
				{
					"name": "entity.name.function.jackal",
					"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
				},
				{
					"name": "entity.name.type.class.jackal",
					"match": "(?<=class\\s)\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.jackal",
					"match": "(\\+|\\-|\\*|\\/|%|=|==|!=|<|>|<=|>=|&&|\\|\\||!|=>)"
				}
			]
		}
	},
	"scopeName": "source.jackal"
}